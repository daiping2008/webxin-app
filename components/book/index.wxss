.container {
  display: flex;
  position: relative;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  box-shadow: 2px 2px 2px #e3e3e3;
}

.container > image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.desc {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 5rpx 15rpx 8rpx;
  box-sizing: border-box;
}

.title {
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.author {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.footer {
  font-size: 20rpx;
  text-align: right;
  color: #999;
}
