.container {
  display: inline-flex;
  flex-direction: row;
  height: 60rpx;
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
}

.line {
  height: 45rpx;
  border: 1px solid #000;
  margin-right: 14rpx;
  margin-left: 14rpx;
}

.date-container {
  display: flex;
  flex-direction: column;
}

.month {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-right: 4rpx;
  padding-bottom: 6rpx;
  padding-top: 5rpx;
}

.year {
  font-size: 20rpx;
  line-height: 20rpx;
}
