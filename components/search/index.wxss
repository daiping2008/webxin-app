.container {
  position: absolute;
  top: 0;
  left: 0;
  height: 0;
  right: 0;
  background-color: #fff;
  padding-top: 100rpx;
  z-index: 9;
}

.header {
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  flex-direction: row;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  background-color: #fff;
  width: 750rpx;
  align-items: center;
  justify-content: center;
  z-index: 99;
}

.search-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 28rpx;
  justify-content: center;
}

.search-container .icon {
  width: 28rpx;
  height: 28rpx;
  margin: 0 15rpx;
}

.search-container .bar {
  width: 500rpx;
  height: 34rpx;
  font-size: 28rpx;
  display: inline-block;
}

.header .cancel {
  width: 100rpx;
  font-size: 30rpx;
  text-align: center;
}

.history {
  width: 690rpx;
  margin: 15rpx auto;
  font-size: 28rpx;
}

.history .title {
  border-left: 8rpx solid #333;
  text-indent: 8rpx;
  margin-bottom: 15rpx;
}

.noResult {
  font-size: 30rpx;
  color: #999;
  position: absolute;
  top: 130rpx;
  width: 100%;
  text-align: center;
  background-color: #fff;
}

.history .tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.history .tags v-tag {
  margin-left: 15rpx;
  margin-bottom: 15rpx;
}

.books-container {
  position: absolute;
  top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx 90rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 9;
}

.books-container v-book {
  margin-bottom: 30rpx;
}
