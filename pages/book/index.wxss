/* pages/book/index.wxss */

.container {
  padding-top: 120rpx;
}

.header {
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  z-index: 9;
}

.search-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  color: #999;
  width: 700rpx;
  height: 68rpx;
}

.search-wrapper image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.sub-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.sub-title {
  max-width: 106rpx;
  height: 34rpx;
  margin-bottom: 30rpx;
}

.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx;
  box-sizing: border-box;
}

.books-container v-book {
  margin-bottom: 30rpx;
}
