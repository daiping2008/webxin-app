.container {
  display: flex;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.header  > image {
  width: 200rpx;
  height: 300rpx;
}

.header .title {
  color: #2f2f2f;
  font-size: 38rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.header .author {
  color: #999;
  font-size: 28rpx;
}

.sub-container {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.sub-container .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
}

.comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 4rpx;
}

.comment-container v-tag:nth-child(1)> view {
  background-color: #fffbdd !important;
}

.comment-container v-tag:nth-child(2)>view {
  background-color: #eefbff;
}

.sub-container  .shadow {
  font-size: 24rpx;
  color: #999;
}

.sub-container .summary {
  font-size: 26rpx;
  color: #999;
  text-indent: 52rpx;
  line-height: 32rpx;
}

.detail-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.detail-container .detail-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 28rpx;
  color: #999;
}
.detail-container .detail-item .name {
  width: 150rpx;
  text-align: right;
}

.post-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  box-shadow: 1px -1px 1px #e3e3e3;
}
.post-container .post-fake {
  font-size: 28rpx;
  color: #999;
  width: 460rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #999;
  border-radius: 15rpx;
}

.posting-container{
  position: fixed;
  display: flex;
  flex-direction: column;
  box-shadow: 1px -1px 1px #e3e3e3;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  z-index: 9;
}
.posting-container .posting-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  font-size: 34rpx;
  padding: 15rpx;
  box-sizing: border-box;
}
.posting-container .posting-header .cancel {
  color: #999;
}
.posting-container .post {
  width: 690rpx;
  margin: 15rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  font-size: 28rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
}